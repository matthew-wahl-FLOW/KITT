# MQTT broker settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=your_mqtt_user
MQTT_PASS=REPLACE_ME_WITH_SECURE_PASSWORD
MQTT_TLS=false

# JMRI connection
JMRI_HOST=localhost
JMRI_PORT=12080
JMRI_API_KEY=REPLACE_ME_WITH_JMRI_API_KEY

# Service runtime
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
TIMEZONE=UTC

# Hardware identifiers and interfaces
TRAIN_ORCHESTRATOR_ID=beer_orchestrator_01
FRIDGE_CONTROLLER_ID=fridge_01
LIFT_CONTROLLER_ID=lift_01
RFID_READER_PORT=/dev/ttyUSB0
LOADCELL_ADC_CHANNEL=0

# Camera and telemetry
CAMERA_RTSP_URL=rtsp://camera_user:REPLACE_ME@camera-host:554/stream
TELEMETRY_DB_URL=sqlite:///data/telemetry.db

# Safety and timeouts (seconds)
SENSOR_HEARTBEAT_INTERVAL=10
COMMAND_TIMEOUT=5
MAX_RETRIES=3

# Optional integrations
REIF_RFID_MAP_FILE=/etc/kitt/reif_map.json
NOTIFICATION_EMAIL=ops@example.com
